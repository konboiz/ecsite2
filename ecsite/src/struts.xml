<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.template.action" extends="struts-default">


		<!-- HomeAction -->
		<action name="HomeAction" class="com.internousdev.template.action.HomeAction" method="execute">
			<result name="success">login.jsp</result>
		</action>


		<!-- GoUserCreateAction -->
		<action name="GoUserCreateAction" class="com.internousdev.template.action.GoUserCreateAction" method="execute">

			<result name="success"> UserCreate.jsp</result>
		</action>


		<!-- UserCreateAction -->
		<action name="UserCreateAction" class="com.internousdev.template.action.UserCreateAction" method="execute">

			<result name="success">UserCreateConfirm.jsp</result>
			<result name="error">UserCreate.jsp</result>
		</action>

		<!-- UserCreateConfirmAction -->
		<action name="UserCreateComplateAction" class="com.internousdev.template.action.UserCreateConfirmAction" method="execute">

			<result name="success">UserCreateComplate.jsp</result>
		</action>

		<!-- UserCreateComplateAction
		ユーザー登録の流れがわからなくなった
		ため一時的にコメントアウト

		<action name="UserCreateComplateAction" class="com.internousdev.template.action.UserCreateComplateAction" method="execute">

			<result name="success">login.jsp</result>
		</action>
		-->


		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.template.action.LoginAction" method="execute">
			<result name="success">MyPage.jsp</result>
			<result name="error">login.jsp</result>
			<!-- error.jspから MyPageActionで再確認-->
		</action>

		<!-- MyPageAction -->
		<action name="MyPageAction" class="com.internousdev.template.action.MyPageAction" method="execute">
			<result name="success">item.jsp</result>
		</action>

			<!-- itemAction -->
		<action name="ItemAction" class="com.internousdev.template.action.ItemAction" method="execute">
			<result name="success">cart.jsp</result>
		</action>

				<!-- CartAction -->
		<action name="CartAction" class="com.internousdev.template.action.CartAction" method="execute">

			<result name="success">pay.jsp</result>
		</action>

				<!-- PayAction -->
		<action name="PayAction" class="com.internousdev.template.action.PayAction" method="execute">

			<result name="success">confirm.jsp</result>
		</action>


				<!-- ConfirmAction -->
		<action name="ConfirmAction" class="com.internousdev.template.action.ConfirmAction" method="execute">

			<result name="success">complate.jsp</result>
		</action>


				<!-- ComplateAction -->
		<action name="ComplateAction" class="com.internousdev.template.action.ComplateAction" method="execute">

			<result name="success">home.jsp</result>
		</action>

				<!-- HistoryAction -->
		<action name="HistoryAction" class="com.internousdev.template.action.HistoryAction" method="execute">

			<result name="success"> History.jsp</result>
		</action>

	</package>
</struts>